  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./source",
    "baseUrl": "./",
    "noLib": false
  },
  "include": ["source/**/*.ts"],
  "exclude": ["node_modules"]
}
